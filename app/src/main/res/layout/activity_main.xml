<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnmunyi.locateandtextme.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/mapMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="19dp"
            android:text="Map Me" />

        <Button
            android:id="@+id/textMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/mapMe"
            android:layout_marginEnd="28dp"
            android:text="Text Me" />

        <TextView
            android:id="@+id/lati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/mapMe"
            android:layout_marginBottom="31dp"
            android:layout_marginStart="12dp"
            android:text="..." />

        <TextView
            android:id="@+id/longi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lati"
            android:layout_alignStart="@+id/textMe"
            android:layout_marginStart="14dp"
            android:text="..." />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mapDisplay"
        android:layout_width="368dp"
        android:layout_height="343dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="160dp"></LinearLayout>
</android.support.constraint.ConstraintLayout>
